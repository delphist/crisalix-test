<section class="jumbotron text-center">
  <div class="container">
    <h1>Your appointments</h1>
    <p class="lead text-muted">Here is your appointments.</p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @appointments.each do |appointment| %>
        <div class="col">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h4><%= appointment.patient.name %></h4>
              <p class="card-text"><%= appointment.scheduled_at %></p>
              <a href="<%= doctors_appointment_path(appointment) %>" class="btn btn-sm btn-outline-primary">Details</a>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>