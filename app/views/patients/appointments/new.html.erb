<section class="jumbotron text-center">
  <div class="container">
    <h1>Book an appointment</h1>
    <p>Please fill in appointment time and add at least 3 photos.</p>
  </div>
</section>

<div class="bg-light">
  <main class="form-signin">
    <%= form_for(@resource, url: patients_appointments_path) do |f| %>
      <% if @resource.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% @resource.errors.full_messages.each do |message| %>
            <%= message %><br />
          <% end %>
        </div>
      <% end %>

      <label>Doctor</label>
      <input type="text" value="<%= @resource.doctor.name %>" class="form-control" disabled>
      <%= f.hidden_field :doctor_id %>
      <br />
      <label>Appointment time</label>
      <%= f.text_field :scheduled_at, class: 'form-control' %>
      <br />
      <label>Photos</label>
      <%= f.file_field :images, class: 'form-control', multiple: true, accept: 'image/*' %>
      <br />
      <%= f.submit "Submit", class: 'w-100 btn btn-lg btn-primary' %>
    <% end %>
  </main>
</div>