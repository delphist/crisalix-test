<section class="jumbotron text-center">
  <div class="container">
    <h1>Your appointments</h1>
    <p class="lead text-muted">Here is your appointments.</p>
    <p>
      <a href="<%= patients_doctors_path %>" class="btn btn-primary my-2">See a doctors list</a>
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @appointments.each do |appointment| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h4><%= appointment.doctor.name %></h4>
              <p class="card-text"><%= appointment.scheduled_at %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="<%= patients_appointment_path(appointment) %>" class="btn btn-sm btn-outline-secondary">Details</a>
                </div>
                <small class="text-muted"></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>